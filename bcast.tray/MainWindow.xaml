<Window x:Class="bcast.tray.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:common="clr-namespace:bcast.common"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <DataTemplate DataType="common:Item"></DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="1" Header="Waiting bcasts" Padding="0">
            <ListBox BorderThickness="0"></ListBox>
        </GroupBox>
        <GridSplitter HorizontalAlignment="Stretch" Grid.Row="2" VerticalAlignment="Top" Height="3"/>
        <GroupBox Grid.Row="2" Header="Past bcasts" Margin="0,3,0,0">
            <ListBox BorderThickness="0">

            </ListBox>
        </GroupBox>
    </Grid>
</Window>
